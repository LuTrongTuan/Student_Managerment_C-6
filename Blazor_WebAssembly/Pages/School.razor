@page "/Schools"
<h3>School</h3>
@if (Schools == null)
{
	<div>Loading...</div>
}
else
{
	<table class="table table-hover table-striped">
		<thead>
		<tr>
			<th>Name</th>
			<th>Status</th>
		</tr>
		</thead>
		<tbody>
		@if (Schools != null && Schools.Count() > 0)
		{
			@foreach (var x in Schools)
			{
				<tr>
					<td>@x.Name</td>
					<td>@x.Status</td>
				</tr>
			}
		}
   
		</tbody>
	</table>
}
